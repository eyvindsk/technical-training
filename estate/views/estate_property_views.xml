<odoo>
	<data>
		<record id="properties_model_action" model="ir.actions.act_window">
			<field name="name">Properties</field>
			<field name="res_model">estate.property</field>
			<field name="view_mode">tree,form</field>
		</record>
		<record id="properties_view_tree" model="ir.ui.view">
			<field name="name">estate.property.tree</field>
			<field name="model">estate.property</field>
			<field name="arch" type="xml">
				<tree string="Properties">
					<field name="name" string="Title" />
					<field name="postcode" string="Postcode"/>
					<field name="bedrooms" string="Bedrooms" />
					<field name="living_area" string="Living Area sqm" />
					<field name="expected_price" string="Expected price" />
					<field name="selling_price" string="Selling Price" />
					<field name="date_availability" string="Available From" />
				</tree>
			</field>
		</record>

		<record id="properties_view_form" model="ir.ui.view">
			<field name="name">estate.property.form</field>
			<field name="model">estate.property</field>
			<field name="arch" type="xml">
				<form string="Property">
					<sheet>
						<h1>
							<field name="name" string="Title"/>
						</h1>
                        <group>
							<group>
								<field name="postcode" />
								<field name="date_availability" />
							</group>
							<group>
								<field name="expected_price" />
								<field name="selling_price" />
							</group>
						</group>
						<notebook>
                            <page string="Info">
							<group>
								<field name="description" />
								<field name="bedrooms" />
								<field name="living_area" />
								<field name="facades" />
								<field name="garage" />
								<field name="garden" />
								<field name="garden_area" />
								<field name="garden_orientation" />
							</group>
						    </page>
                        </notebook>
                        
                       
					</sheet>
				</form>
			</field>
		</record>

        <record id="view_properties_tree_search" model="ir.ui.view">
            <field name="name">estate.property.search</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <search string="Search properties">
                    <field name="name" string="Title" />
                    <field name="postcode"/>
                    <field name="expected_price"/>
                    <field name="bedrooms"/>
                    <field name="living_area"/>
                    <field name="facades"/>
                    <separator/>
                    <filter string="Available" name="inactive" domain="[('active', '=', False)]"/>
                    <separator/>
                    <filter string="New" name="state" domain="[('state', '=', 'new')]"/>
                    <filter string="Offer Received" name="state" domain="[('state', '=', 'offer_received')]"/>
                    <filter string="Offer Accepted" name="state" domain="[('state', '=', 'offer_accepted')]"/>
                    <filter string="Sold" name="state" domain="[('state', '=', 'sold')]"/>
                    <group expand="1" string="Group By">
                        <filter string="Postcode" name="postcode" context="{'group_by':'postcode', 'residual_visible':True}"/>
                    </group>
                </search>
            </field>
        </record>
	</data>
</odoo>
